namespace API.DTOs.Companies
{
    public class CompanyWithAdminResponseDto
    {
        // ----- Société -----
        public int CompanyId { get; set; }
        public string CompanyName { get; set; } = string.Empty;
        public string? CompanyDescription { get; set; }
        public string? CompanyAddress { get; set; }
        public string? CompanyCity { get; set; }
        public string? CompanyPhoneNumber { get; set; }
        public string? CompanyEmail { get; set; }
        public string? CompanyLogoUrl { get; set; }
        public bool CompanyIsActive { get; set; }
        public DateTime CompanyCreatedAt { get; set; }

        // ----- Admin -----
        public int AdminUserId { get; set; }
        public string AdminFirstName { get; set; } = string.Empty;
        public string AdminLastName { get; set; } = string.Empty;
        public string AdminFullName { get; set; } = string.Empty;
        public string AdminEmail { get; set; } = string.Empty;
        public string? AdminPhoneNumber { get; set; }
        public string? AdminAddress { get; set; }
        public string? AdminCity { get; set; }
        public string AdminRole { get; set; } = "Admin";
        public DateTime AdminCreatedAt { get; set; }
    }
}

